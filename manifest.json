{
  "manifest_version": 3,
  "name": "AlumniConnect",
  "version": "1.0",
  "description": "An extension to connect with Penn alumni and generate cold emails.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "*://*.upenn.edu/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/AlumniConnectIcon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["webscraper.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "popup.css", "config.js", "pdf.min.js", "compromise.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/AlumniConnectIcon.png",
    "48": "assets/AlumniConnectIcon.png",
    "128": "assets/AlumniConnectIcon.png"
  }
}