{
  "manifest_version": 3,
  "name": "AlumniConnectAI",
  "version": "1.0",
  "description": "Automate alumni outreach with personalized emails",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.upenn.edu/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.upenn.edu/*"],
      "js": ["content.js"]
    }
  ]
}
